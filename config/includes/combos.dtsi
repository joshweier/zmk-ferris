
#define COMBO_TIMEOUT 50
#define COMBO_GLOBAL_QUICKTAP 100

/ {

        combos {
                compatible = "zmk,combos";

                combo_shift {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <31 32>;
                    bindings = <&caps_word>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

                combo_numword {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <30 33>;
                    bindings = <&num_word>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

combo_tab {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <0 9>;
                    bindings = <&kp TAB>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

                combo_enter {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <10 19>;
                    bindings = <&kp RET>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

                combo_enter_r {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <16 17>;
                    bindings = <&kp RET>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

                combo_sys {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <20 29>;
                    bindings = <&to 3>;
                    // global-quick-tap-ms = <COMBO_GLOBAL_QUICKTAP>;
                };

            };

    };
