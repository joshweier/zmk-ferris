
#define COMBO_TIMEOUT 50
#define COMBO_PRIOR_IDLE 150

/ {

        combos {
                compatible = "zmk,combos";

                combo_capword {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <31 32>;
                    bindings = <&caps_word>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_numword {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <30 33>;
                    bindings = <&num_word>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_esc_left {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <1 2>;
                    bindings = <&kp ESC>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_enter_left {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <2 3>;
                    bindings = <&kp ENTER>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_amp {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <1 11>;
                    bindings = <&kp AT>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_hash {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <2 12>;
                    bindings = <&kp HASH>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_dollar {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <3 13>;
                    bindings = <&kp DOLLAR>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_perc {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <4 14>;
                    bindings = <&kp PERCENT>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_period {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <11 21>;
                    bindings = <&kp PERIOD>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_bslash {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <12 22>;
                    bindings = <&kp BSLH>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_equal {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <13 23>;
                    bindings = <&kp EQUAL>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_tilde {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <14 24>;
                    bindings = <&kp TILDE>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_tab {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <0 9>;
                    bindings = <&kp TAB>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

		combo_tab_left {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <11 12>;
                    bindings = <&kp TAB>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_enter {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <10 19>;
                    bindings = <&kp RET>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_enter_r {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <16 17>;
                    bindings = <&kp RET>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_backspace {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <6 7>;
                    bindings = <&kp BSPC>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_del {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <7 8>;
                    bindings = <&kp DEL>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

                combo_sys {
                    timeout-ms = <COMBO_TIMEOUT>;
                    key-positions = <20 29>;
                    bindings = <&to 3>;
		    require-prior-idle-ms = <COMBO_PRIOR_IDLE>;
                };

            };

    };
